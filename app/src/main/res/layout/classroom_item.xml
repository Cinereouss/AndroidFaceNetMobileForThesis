<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/bg_time_table_item"
    android:orientation="horizontal"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp">

    <LinearLayout
        android:layout_marginLeft="16dp"
        android:orientation="vertical"
        android:layout_width="210dp"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_class_name"
            android:layout_marginTop="15dp"
            android:textSize="22sp"
            android:textColor="#000C5D"
            android:text="LAIXE01"
            android:textAllCaps="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descdoes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Khai giảng: "
                android:textColor="#ADADAD"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_khai_giang"
                android:textSize="15sp"
                android:textColor="#ADADAD"
                android:layout_marginTop="5dp"
                android:text="2021-01-09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/descdo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Loại bằng: "
                android:textColor="#ADADAD"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/txt_loai_bang"
                android:textSize="15sp"
                android:textColor="#ADADAD"
                android:layout_marginTop="5dp"
                android:text="B2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="15dp">

            <TextView
                android:id="@+id/numOfS"
                android:textSize="15sp"
                android:textColor="#ADADAD"
                android:layout_marginTop="5dp"
                android:text="Thời gian học(giờ): "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_so_gio"
                android:textSize="15sp"
                android:textColor="#ADADAD"
                android:layout_marginTop="5dp"
                android:text="340"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|end">

        <Button
            android:id="@+id/btn_classroom_detail"
            android:textColor="@color/niceYellow"
            android:layout_marginRight="16dp"
            android:background="@drawable/bg_btn_yellow_outline"
            android:text="Chi tiết"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:paddingStart="2dp"
            android:paddingEnd="2dp"
            android:layout_height="25dp" />

    </LinearLayout>

</LinearLayout>