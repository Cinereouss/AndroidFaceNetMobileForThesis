<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".Search">

  <EditText
      android:id="@+id/edit_search_cmnd"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginStart="25dp"
      android:layout_marginEnd="25dp"
      android:layout_marginBottom="5dp"
      android:background="#ffffff"
      android:drawableStart="@drawable/ic_baseline_search_24"
      android:drawablePadding="16dp"
      android:ems="10"
      android:hint="Nhập số CMND"
      android:inputType="number"
      android:paddingLeft="16dp"
      app:layout_constraintBottom_toTopOf="@+id/guideline7"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.497"
      app:layout_constraintStart_toStartOf="parent" />

  <Button
      android:id="@+id/btnSearch"
      android:layout_width="match_parent"
      android:layout_height="60dp"
      android:layout_marginStart="25dp"
      android:layout_marginTop="5dp"
      android:layout_marginEnd="25dp"
      android:background="#26292e"
      android:text="Tra cứu"
      android:textColor="#ffffff"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline7" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline7"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.55" />

  <TextView
      android:id="@+id/textView16"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Tra cứu học viên"
      android:textColor="#ffffff"
      android:textSize="38sp"
      android:textStyle="bold"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="@+id/guideline9" />

  <TextView
      android:id="@+id/textView17"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Tìm kiếm thông tin học viên dựa theo số CMND"
      android:textColor="#D6D6D6"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/btnSearch" />

  <ImageView
      android:id="@+id/imageView18"
      android:layout_width="75dp"
      android:layout_height="75dp"
      app:layout_constraintBottom_toTopOf="@+id/edit_search_cmnd"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/textView16"
      app:srcCompat="@drawable/icon_search" />

  <androidx.constraintlayout.widget.Guideline
      android:id="@+id/guideline9"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      app:layout_constraintGuide_percent="0.1" />
</androidx.constraintlayout.widget.ConstraintLayout>